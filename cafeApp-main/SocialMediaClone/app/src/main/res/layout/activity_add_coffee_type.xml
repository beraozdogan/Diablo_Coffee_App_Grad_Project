<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddCoffeeTypeActivity">


    <EditText
        android:id="@+id/coffeeTypeTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="kahve türü giriniz"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/addTypeBtn"
        android:onClick="addTypeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yeni kahve türü ekle"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/coffeeTypeTxt"
        app:layout_constraintStart_toStartOf="@id/coffeeTypeTxt"
        app:layout_constraintEnd_toEndOf="@id/coffeeTypeTxt" />

    <Button
        android:onClick="goBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="geri dön"
        app:layout_constraintTop_toBottomOf="@id/addTypeBtn"
        app:layout_constraintEnd_toEndOf="@id/coffeeTypeTxt"
        android:layout_marginTop="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>