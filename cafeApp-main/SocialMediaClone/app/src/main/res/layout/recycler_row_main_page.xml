<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="1dp">

        <RelativeLayout
            android:id="@+id/innerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.98"
            android:background="@color/black"
            android:padding="5dp">

            <ImageView
                android:id="@+id/itemImageView"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/yenilikIsmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemImageView"
                android:layout_marginTop="16dp"
                android:text="Burada kampanya ismi yazacak"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/yenilikIcerik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/yenilikIsmi"
                android:layout_marginTop="8dp"
                android:textStyle="normal"
                android:layout_margin="5dp"
                android:text="İçerik böyle bir şekilde yazacak işte daha ne yazsın"
                android:textColor="#D6D6D6"
                android:textSize="16sp" />


        </RelativeLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
